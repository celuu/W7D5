<h1>Sign Up</h1>


<form action="<%= users_url %>" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label>Username:<input type="text" name="user[username]" value="<%= @user.username if @user %>"></label>
    <br>
    <label>Password:<input type="password" name="user[password]" value="<%= @user.password if @user %>"></label>
    <br>
    <button>Submit</button>
</form>
